<Window x:Class="PartnerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartnerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFFFF">
    
        <Border Name="Menu" MinWidth="400" Margin="15" VerticalAlignment="Center" Padding="30"
  MaxWidth="550" CornerRadius="20" Background="#F4E8D3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Button Style="{StaticResource interactiveButtonStyle}" Content="История партнеров" Click="buttonPartnerClick"/>
                <Button Style="{StaticResource interactiveButtonStyle}" Content="Партнёры" Click="buttonPartnerStoryClick" />
            </StackPanel>
        </Border>
        <Frame Name="pageFrame" Visibility="Hidden"/>
    </Grid>
</Window>
