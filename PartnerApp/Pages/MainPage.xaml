<Page x:Class="PartnerApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartnerApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#FFFFFF">
        <Image Source="/1.png" Width="100" Height="100" VerticalAlignment="Top"/>
        <Border Name="Menu" MinWidth="400" Margin="15" VerticalAlignment="Center" Padding="30"
MaxWidth="550" CornerRadius="20" Background="#F4E8D3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Button Style="{StaticResource interactiveButtonStyle}" Content="Скидки" Click="buttonDiscountClick"/>
                <Button Style="{StaticResource interactiveButtonStyle}" Margin="0 15 0 0" Content="Партнёры" Click="buttonPartnerClick"/>
                <Button Style="{StaticResource interactiveButtonStyle}" Margin="0 15 0 0" Content="История партнеров" Click="buttonPartnerStoryClick" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
